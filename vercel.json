{
  "version": 2,
  "buildCommand": [
    {
      "src": "app/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "path/to/your/react-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/submit_form",
      "methods": ["POST"],
      "dest": "/app/submit_form.py"
    },
    {
      "src": "/song_request",
      "methods": ["GET"],
      "dest": "/app/song_request.py"
    },
    {
      "src": "/audio/(.*)",
      "methods": ["GET"],
      "dest": "/app/audio.py"
    },
    {
      "src": "/video/(.*)",
      "methods": ["GET"],
      "dest": "/app/video.py"
    },
    {
      "src": "/delete_songs",
      "methods": ["POST"],
      "dest": "/app/delete_songs.py"
    }
  ]
}
